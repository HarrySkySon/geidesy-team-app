# Production Environment Configuration
# IMPORTANT: Update these values before deployment!

# Database Configuration
POSTGRES_DB=surveying_db_prod
POSTGRES_USER=surveying_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!

# MinIO Configuration
MINIO_ROOT_USER=surveying_admin
MINIO_ROOT_PASSWORD=CHANGE_THIS_MINIO_PASSWORD_789!

# JWT Configuration
JWT_SECRET=CHANGE_THIS_JWT_SECRET_VERY_LONG_AND_SECURE_KEY_2024
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_VERY_LONG_AND_SECURE_KEY_2024

# Application URLs
FRONTEND_URL=https://your-domain.com
API_BASE_URL=https://your-domain.com/api
WEBSOCKET_URL=wss://your-domain.com

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD!

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/surveying-app

# Security Configuration
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_VERY_SECURE!
ENCRYPTION_KEY=CHANGE_THIS_32_CHAR_ENCRYPTION_KEY

# External Services (optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
WEATHER_API_KEY=your-weather-api-key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=surveying-backups-bucket

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Performance Tuning
NODE_ENV=production
DATABASE_POOL_SIZE=20
REDIS_MAX_CONNECTIONS=10
MAX_FILE_UPLOAD_SIZE=100MB

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_SYNC=true
ENABLE_REAL_TIME_UPDATES=true